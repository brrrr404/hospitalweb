<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="2023-01-17-create-staff-table-import-1" author="emelianov-aa">
        <createTable tableName="staff">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="create_ts" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="id_user" type="int" remarks="Связь с пользователем">
                <constraints nullable="false"/>
            </column>
            <column name="department" type="varchar" remarks="Департамент"/>
            <column name="position" type="varchar" remarks="Должность"/>
        </createTable>
        <rollback>
            <dropTable tableName="staff"/>
        </rollback>
    </changeSet>

    <changeSet id="2023-01-17-create-staff-table-import-2" author="emelianov-aa">
        <addForeignKeyConstraint baseTableName="staff"
                                 baseColumnNames="id_user"
                                 constraintName="fk_staff_1"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="staff" constraintName="fk_staff_1"/>
        </rollback>
    </changeSet>

    <changeSet id="2023-01-17-create-staff-table-import-3" author="emelianov-aa">
        <createIndex tableName="staff" indexName="idx_staff_1">
        <column name="id_user"/>
        </createIndex>
        <rollback>
            <dropIndex tableName="staff" indexName="idx_staff_1"/>
        </rollback>
    </changeSet>
</databaseChangeLog>