<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="2023-01-17-create-treatment-table-import-1" author="emelianov-aa">
        <createTable tableName="treatment">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="create_ts" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="id_user" type="int" remarks="Связь с пользователем">
                <constraints nullable="false"/>
            </column>
            <column name="id_staff" type="int" remarks="Связь с сотрудником">
                <constraints nullable="false"/>
            </column>
            <column name="id_record" type="int" remarks="Связь с записью на приём">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="timestamp" remarks="Дата записи">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="text" remarks="Комментарий">
                <constraints nullable="false"/>
            </column>
            <column name="archive_ts" type="timestamp" remarks="Дата архивации"/>
            <column name="archive_comment" type="varchar" remarks="Комментарий архивации"/>
        </createTable>
        <rollback>
            <dropTable tableName="treatment"/>
        </rollback>
    </changeSet>

    <changeSet id="2023-01-17-create-treatment-table-import-2" author="emelianov-aa">
        <addForeignKeyConstraint baseTableName="treatment"
                                 baseColumnNames="id_user"
                                 constraintName="fk_treatment_1"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="treatment"
                                 baseColumnNames="id_staff"
                                 constraintName="fk_treatment_2"
                                 referencedTableName="staff"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="treatment"
                                 baseColumnNames="id_record"
                                 constraintName="fk_treatment_3"
                                 referencedTableName="record"
                                 referencedColumnNames="id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="treatment" constraintName="fk_treatment_1"/>
            <dropForeignKeyConstraint baseTableName="treatment" constraintName="fk_treatment_2"/>
            <dropForeignKeyConstraint baseTableName="treatment" constraintName="fk_treatment_3"/>
        </rollback>
    </changeSet>

    <changeSet id="2023-01-17-create-treatment-table-import-3" author="emelianov-aa">
        <createIndex tableName="treatment" indexName="idx_treatment_1">
            <column name="id_user"/>
        </createIndex>
        <createIndex tableName="treatment" indexName="idx_treatment_2">
            <column name="id_staff"/>
        </createIndex>
        <createIndex tableName="treatment" indexName="idx_treatment_3">
            <column name="id_record"/>
        </createIndex>
        <rollback>
            <dropIndex tableName="treatment" indexName="idx_treatment_1"/>
            <dropIndex tableName="treatment" indexName="idx_treatment_2"/>
            <dropIndex tableName="treatment" indexName="idx_treatment_3"/>
        </rollback>
    </changeSet>
</databaseChangeLog>