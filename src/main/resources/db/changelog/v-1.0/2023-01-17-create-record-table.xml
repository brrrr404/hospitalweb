<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="2023-01-17-create-record-table-import-1" author="emelianov-aa">
        <createTable tableName="record">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="create_ts" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="id_user" type="int" remarks="Связь с пользователем">
                <constraints nullable="false"/>
            </column>
            <column name="id_staff" type="int" remarks="Связь с сотрудником">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="timestamp" remarks="Дата записи">
                <constraints nullable="false"/>
            </column>
            <column name="archive_ts" type="timestamp" remarks="Дата архивации"/>
            <column name="archive_comment" type="varchar" remarks="Комментарий архивации"/>
        </createTable>
        <rollback>
            <dropTable tableName="record"/>
        </rollback>
    </changeSet>

    <changeSet id="2023-01-17-create-record-table-import-2" author="emelianov-aa">
        <addForeignKeyConstraint baseTableName="record"
                                 baseColumnNames="id_user"
                                 constraintName="fk_record_1"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="record"
                                 baseColumnNames="id_staff"
                                 constraintName="fk_record_2"
                                 referencedTableName="staff"
                                 referencedColumnNames="id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="record" constraintName="fk_record_1"/>
            <dropForeignKeyConstraint baseTableName="record" constraintName="fk_record_2"/>
        </rollback>
    </changeSet>

    <changeSet id="2023-01-17-create-record-table-import-3" author="emelianov-aa">
        <createIndex tableName="record" indexName="idx_record_1">
            <column name="id_user"/>
        </createIndex>
        <createIndex tableName="record" indexName="idx_record_2">
            <column name="id_staff"/>
        </createIndex>
        <rollback>
            <dropIndex tableName="record" indexName="idx_record_1"/>
            <dropIndex tableName="record" indexName="idx_record_2"/>
        </rollback>
    </changeSet>
</databaseChangeLog>